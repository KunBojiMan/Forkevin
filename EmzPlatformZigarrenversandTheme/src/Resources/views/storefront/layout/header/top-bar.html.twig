{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}

{% block layout_header_top_bar %}
	<div class="emz-top-bar-wrapper">
		<div class="top-bar container">
			<nav class="top-bar-nav emz-top-bar justify-content-between align-items-center">
				<span class="emz-top-bar-item delivery">{% sw_icon 'delivery' style { 'pack': 'EmzIcons'} %}{{ "zigarrenversand-theme.emz-top-bar.delivery"|trans|sw_sanitize }}</span>
				<span class="emz-top-bar-item trending">{% sw_icon 'trending' style { 'pack': 'EmzIcons'} %}{{ "zigarrenversand-theme.emz-top-bar.trending"|trans|sw_sanitize }}</span>
				<span class="emz-top-bar-item info">{% sw_icon 'info' style { 'pack': 'EmzIcons'} %}{{ "zigarrenversand-theme.emz-top-bar.info"|trans|sw_sanitize }}</span>
				<span class="emz-top-bar-item new">{% sw_icon 'new' style { 'pack': 'EmzIcons'} %}{{ "zigarrenversand-theme.emz-top-bar.new"|trans|sw_sanitize }}</span>
				<span class="emz-top-bar-item phone">{% sw_icon 'phone' style { 'pack': 'EmzIcons' } %}
          <a class="top-bar-text hotline-text">
						Hotline
					</a>
					<a class="top-bar-text">
						052. 624 26 00
					</a>
				</span>
				<span class="emz-top-bar-item service">{% sw_icon 'service' style { 'pack': 'EmzIcons'} %}{{ "zigarrenversand-theme.emz-top-bar.service"|trans|sw_sanitize }}</span>
				{% block layout_header_top_bar_language %}{% endblock %}

				{% block layout_header_top_bar_currency %}{% endblock %}

				{% block layout_header_top_bar_service %}{% endblock %}
			</nav>
		</div>
	</div>
{% endblock %}
